
/*!* ----------
* $Core
*/

.cont
  postion relative
  width 100vw

.l-portada
  background-color #fafafa
  width 100vw
  height 100vh
  position absolute
  top 0
  left 0
  display flex
  flex-direction column
  align-items center
  justify-content center
  font-family Ubuntu-Mono

.backlogo
  width 10em
  height 10em
  background-color black
  transform rotate(45deg)
  margin-top 2em
  box-shadow 1px 1px 2px #999

.logo
  position relative
  width 100%
  height 100%
  overflow hidden
  transform rotate(-45deg)

.verbose
  background-color black
  display inline-block
  padding .5em
  position relative
  text-align center
  white-space nowrap
  margin-top 4em
  box-shadow 1px 1px 2px #999
  .ver-name
    font-size 1.5em
    line-height 1em
    letter-spacing .1em
  .ver-sub
    font-weight normal
    font-size 1.2em
    line-height 1em
    margin-top -0.2em
    text-align left
    padding-left .5em
  .contact
    letter-spacing .05em
    cursor pointer
    padding .5em
    background-color transparent
    color black
    position absolute
    border none
    right 2px
    bottom -1.6em
    font-family Ubuntu-Mono
    font-size .8em
    font-weight bold
    &:hover
      color red
    &:focus
      outline none

.l-cuerpo
  width 100vw
  height 100vh
  font-family Ubuntu-Mono
  overflow-y auto
  overflow-x hidden
  margin auto
  transform skewX(20deg)

.ShiningLines
  background-color white
  position absolute
  top 0
  left 150vw
  width 10vw
  height 100vh
  transform skewX(-20deg)
  animation shining-moves 6s infinite
  &::before
  &::after
    background-color white
    position absolute
    top 0
    height 100vh
    content ''
  &::after
    left 40vw
    width 20vw
  &::before
    left 15vw
    width 5vw

.skw-cont
  background-color #000
  position absolute
  top 0
  left 150vw
  width 200vw
  height 100vh
  transform skewX(-20deg)
  font-family Ubuntu-Mono
  box-shadow -2px -2px 30px #bbb

.c-section
  width 100%
  padding 3.5em 1em 1em 1em

.c-about
  padding-top 5.5em
  & .s-title-cont
    float left
    margin-top 4em
    margin-right -100%
    display inline-block
    width 3em
    height 13em
    padding .5em 0
    background black
  & .s-title
    writing-mode vertical-lr
    font-size 3em !important
    width 100%
    text-transform uppercase

.abt-desc-cont
  background black
  position absolute
  left 0
  width 100%
  transform skewY(-12deg)
  z-index -1
  margin-top -4em
  padding-top 5em
  padding-bottom 2em

.abt-desc
  font-size 1.125em
  transform skewY(12deg)
  padding 0 1em
  max-width 39em
  margin auto
  & p
    text-align center

.link-list
  padding-right .5em
  margin .5em 0 1em 0
  & a
    text-align center
    display block
    margin auto
    width 7em
    position relative
    color #0ff
    &::before
    &::after
      transition 500ms
      opacity 0
      position absolute
    &::before
      left 1em
      content '['
    &::after
      right 1em
      content ']'
    &:hover
      color black
      background white
      &::before
      &::after
        color black
        opacity 1
      &::before
        transform translateX(-1em)
      &::after
        transform translateX(1em)


.abt-freelance
  font-size 1.1em
  color #adff2f
  margin auto
  margin-bottom 1.5em
  max-width 20em

.retrato
  width 15em
  display block
  margin auto

.c-contact
  color white
  width 100%
  min-height 100%
  .s-title
    color black
    margin-bottom .5em

.c-form
  margin auto
  width 80%
  max-width 30em

.c-folio
  padding-left 0
  padding-right 0
  padding-bottom 0
  height 100vh
  background #eee
  & .s-title
    text-align right
    font-size 3em
    padding-right 1em

.fl-cab
  background black
  padding 1em
  margin-top -0.5em

.fl-desc
  line-height 1em
  margin .5em 0 1em 0

.fl-menu
  display flex

.fl-select
  font-size 1.2em
  padding .2em .5em
  font-family Ubuntu-Mono
  background white
  border 3px solid #000
  color #000
  display block
  margin auto
  width 50%
  & option
    background #fafafa

.fl-search
  width 50%

.fl-ele
  background #fafafa
  display flex
  padding .5em
  border-bottom 1px solid #999
  position relative
  height 7em
  & .ele-verb
    padding-left .5em
    width 100%
    overflow hidden
    & .ele-cab
      display inline
      line-height 1em
      & .ele-icon
        color #586069
        display inline-block
        vertical-align middle
      & .ele-title
        display inline-block
        vertical-align middle
        color #8b0000
        font-size 1.1em
        padding-left .6em
        text-transform capitalize
        max-width 90%
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
    & .ele-desc
      font-size .9em
      line-height 1em
      padding-left 1.5em
      margin-top 0.1em
      color #586069
      max-width 90%
      max-height 3em
      overflow hidden
      text-transform capitalize
      text-overflow ellipsis
    & .ele-leng
      padding-left 2em
      font-size .8em
      line-height 1em
      position absolute
      bottom 1em
      & .ele-leng-color
        border-radius 50%
        display inline-block
        margin-right .3em
        width 1em
        height 1em
        background red
      & .ele-leng-name
        color #586069
        display inline-block

.ele-t1
  & img
    width 6em
    height 6em
    background red
.ele-t2
  .ele-verb
    width 100%
