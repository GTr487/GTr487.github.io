
/*!* ----------
* $Core
*/

.cont
  postion relative
  width 100vw

.l-portada
  background-color #fafafa
  width 100vw
  height 100vh
  position absolute
  top 0
  left 0
  display flex
  flex-direction column
  align-items center
  justify-content center
  font-family Ubuntu-Mono

.backlogo
  width 10em
  height 10em
  background-color black
  transform rotate(45deg)
  margin-top 2em
  box-shadow 1px 1px 2px #999

.logo
  position relative
  width 100%
  height 100%
  overflow hidden
  transform rotate(-45deg)

.verbose
  background-color black
  display inline-block
  padding .5em
  position relative
  text-align center
  white-space nowrap
  margin-top 4em
  box-shadow 1px 1px 2px #999
  .ver-name
    font-size 1.5em
    line-height 1em
    letter-spacing .1em
  .ver-sub
    font-weight normal
    font-size 1.2em
    line-height 1em
    margin-top -0.2em
    text-align left
    padding-left .5em
  .contact
    letter-spacing .05em
    cursor pointer
    padding .5em
    background-color transparent
    color black
    position absolute
    border none
    right 2px
    bottom -1.6em
    font-family Ubuntu-Mono
    font-size .8em
    font-weight bold
    &:hover
      color red
    &:focus
      outline none

.l-cuerpo
  padding-top 1.5em
  width 100vw
  height 100vh
  font-family Ubuntu-Mono
  overflow-y auto
  overflow-x hidden
  margin auto
  transform skewX(20deg)

.ShiningLines
  background-color white
  position absolute
  top 0
  left 150vw
  width 10vw
  height 100vh
  transform skewX(-20deg)
  animation shining-moves 6s infinite
  &::before
  &::after
    background-color white
    position absolute
    top 0
    height 100vh
    content ''
  &::after
    left 40vw
    width 20vw
  &::before
    left 15vw
    width 5vw

.skw-cont
  background-color #000
  position absolute
  top 0
  left 150vw
  width 200vw
  height 100vh
  transform skewX(-20deg)
  font-family Ubuntu-Mono
  box-shadow -2px -2px 30px #bbb

.c-section
  width 100%
  padding 2em 1em 1em 1em

.c-about
  & .s-title-cont
    float left
    margin-top 4em
    margin-right -100%
    display inline-block
    width 3em
    height 13em
  & .s-title
    writing-mode vertical-lr
    font-size 3em !important
    width 100%

.abt-desc-cont
  background black
  position absolute
  left 0
  transform skewY(-12deg)
  z-index -1
  margin-top -4em
  padding 5em 1em 1em 1em

.abt-desc
  font-size 1.125em
  transform skewY(12deg)

.retrato
  width 15em
  display block
  margin auto

.c-contact
  color white
  width 100%
  min-height 100%
  .s-title
    color black
    margin-bottom .5em

.c-form
  margin auto
  width 80%

.c-folio
  & .s-title
    text-align right
    font-size 3em
    padding-right 1em

.fl-desc
  line-height 1em
  margin .5em 0 1em 0

.fl-menu
  display flex

.fl-select
  font-size 1.2em
  padding .2em .5em
  font-family Ubuntu-Mono
  background white
  border 3px solid #000
  color #000
  display block
  margin auto
  width 50%
  & option
    background #fafafa

.fl-search
  width 50%

.fl-display
  padding-top .5em

.fl-ele
  background #fafafa
  display flex
  padding .5em
  margin-bottom .2em
  & .ele-verb
    padding-left .5em
    width 100%
    & .ele-title
      color black
      font-weight bold
      text-align center
    & .ele-desc
      font-size 1em
      text-align center
      color black
    & .ele-leng
      font-size .7em
      text-align right
      display block
      color #666
      padding-right 1em
      font-style italic

.ele-t1
  & img
    width 6em
    height 6em
    background red
.ele-t2
.ele-t3
  .ele-verb
    width 100%
 .ele-t3
   & .ele-verb
     display flex
     line-height 1em
     align-items center
     padding 0
     justify-content space-between
     & .ele-title
       background white
       border-right 1px solid #999
       text-align left
       display inline-block
       padding-right .5em
     & .ele-desc
       padding 0 .5em
     & .ele-leng
       padding 0
