
/*!* ----------
* $Keyframes
*/

@keyframes anim-glitch-hide
    $min = 90
    $max = 100
    $x   = $min + 5
    $y   = $min + 6
    0% {clip-path: polygon(0 0, 100% 0, 100% 0, 0% 0)}
    {$min - 1}\% {clip-path: polygon(0 0, 100% 0, 100% 0, 0% 0)}
    for m in $min..$max
      $a = random(0,100) * 1%
      $b = random(0,100) * 1%
      if m < $x && m > $min
        {m}\% {clip-path: polygon(0 $a, 100% $a, 100% $b, 0 $b);}
      else if m == $x
        {m}\% {clip-path: polygon(0 $a, 100% $a, 100% $b, 0 $b)}
      else if m > $y && m < $max
        {m}\% {clip-path: polygon(0 $a, 100% $a, 100% $b, 0 $b);}
      else if m == $max || m == $y
        {m}\% {clip-path: polygon(0 0, 100% 0, 100% 0, 0% 0);}

@keyframes anim-glitch-show
    $min = 90
    $max = 100
    $x   = $min + 5
    $y   = $min + 6
    0% {clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%)}
    {$min - 1}\% {clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%)}
    for m in $min..$max
      $a = random(0,100) * 1%
      $b = random(0,100) * 1%
      if m < $x && m > $min
        {m}\% {clip-path: polygon(0 $a, 100% $a, 100% $b, 0 $b);}
      else if m == $x
        {m}\% {clip-path: polygon(0 $a, 100% $a, 100% $b, 0 $b)}
      else if m > $y && m < $max
        {m}\% {clip-path: polygon(0 $a, 100% $a, 100% $b, 0 $b);}
      else if m == $max || m == $y
        {m}\% {clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%)}

@keyframes shining-moves
    from {left: 150vw}
    to {left: -150vw}
